<!-- Loop over each object in the post array -->
{{#each posts as |post| }}
<div class="row mb-4 project">
  <div class="col-md-5">
    <h2>
      <!-- Call helper function with triple brackets to render the emoji span as HTML -->
      <a href="/project/{{post.id}}">{{post.title}}</a>
    </h2>
    <p>
    <p>Created by {{project.user.name}}</p>
  </div>
  <div class="col-md-7">
    <p>
      {{post.text}}
    </p>
  </div>
</div>
{{/each}}